@model Website.Models.News

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

<h4>News</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                @Html.TextAreaFor(x => x.Title, new { @class = "form-control", @style = "min-width: 100%; width: 100%; max-width: 100%; min-height: 60px", @maxlength = "500" })
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                @Html.TextAreaFor(x => x.Images, new { @class = "form-control", @style = "min-width: 100%; width: 100%; max-width: 100%; min-height: 60px", @maxlength = "100" })
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Organization" class="control-label"></label>
                @Html.TextAreaFor(x => x.Organization, new { @class = "form-control",  @style = "min-width: 100%; width: 100%; max-width: 100%; min-height: 60px", @maxlength = "500" })
                <span asp-validation-for="Organization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                @Html.TextAreaFor(x => x.Position, new { @class = "form-control",@style = "min-width: 100%; width: 100%; max-width: 100%; min-height: 60px", @maxlength = "500" })
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                @Html.TextAreaFor(x => x.Name, new { @class = "form-control", @style = "min-width: 100%; width: 100%; max-width: 100%; min-height: 60px", @maxlength = "100" })
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label"></label>
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFinish" class="control-label"></label>
                <input asp-for="DateFinish" class="form-control" />
                <span asp-validation-for="DateFinish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                @Html.TextBoxFor(x => x.Language, new { @class = "form-control", placeholder = "ru или be" })
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="panel-footer">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                @Html.ActionLink("Отменить изменения и вернуться к списку", "Index", null, new
                {
                    @class = "btn btn-default"
                })
            </div>
        </form>
    </div>
</div>


